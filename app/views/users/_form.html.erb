<%= form_with(model: user ,url: confirm_users_path(user)) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="profile-center">
    <div class="col">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <% if current_user.present? %>
      <div class="col my-2">
        <%= form.label :user_type %>
        <%= form.select :user_type, [['Please select a user', nil], 'Admin', 'User'], {}, {class: 'form-control'}  %>
      </div>
      <% else %>
      <div class="d-none">
        <%= form.select :user_type, ['User'], {}, {class: 'form-control'}  %>
      </div>
    <% end %>

    <div class="col">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="col my-2">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="col">
      <%= form.label :phone %>
      <%= form.number_field :phone, class: "form-control" %>
    </div>

    <div class="col my-2">
      <%= form.label :address %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="col mb-3">
      <%= form.label :dob %>
      <%= form.date_field :dob, class: "form-control" %>
    </div>

    <div>
    <%= form.submit class: "btn btn-primary" %>
    </div>

  </div>
<% end %>
