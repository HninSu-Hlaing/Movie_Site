<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="col-md-3 my-2">
    <%= form.label :user_type %>
    <br>
     <%= form.select :user_type, [['Please select a user', nil], 'Admin', 'User'], {}, {class: 'form-control'}  %>
  </div>

  <div class="col-md-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="col-md-3 my-2">
    <%= form.label :password_digest %>
    <%= form.password_field :password_digest, class: "form-control" %>
  </div>

  <div class="col-md-3">
    <%= form.label :phone %>
    <%= form.number_field :phone, class: "form-control" %>
  </div>

  <div class="col-md-3 my-2">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="col-md-3">
    <%= form.label :dob %>
    <%= form.date_field :dob, class: "form-control" %>
  </div>

  <div class="col-md-3 mt-2 mb-3">
    <%= form.label :profile_img %>
    <%= form.file_field :profile_img, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
