<% if current_user.user_type == "User" %>

<div class="show-center">
  <div class="pro-img-div">
    <% if @user.profile_img.attached? %>
      <%= image_tag @user.profile_img, class: "profile-round" %>
    <% end%>
  </div>

  <div class="col">
    <p class="form-control">
      <strong>Name:</strong>
        <%= @user.name %>
    </p>
  </div>
  <div class="col">
    <p class="form-control">
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
  </div>
  <% if @user.phone.present? %>
    <div class="col">
      <p class="form-control">
        <strong>Phone:</strong>
        <%= @user.phone %>
      </p>
    </div>
  <% end %>
  <% if @user.address.present? %>
    <div class="col">
      <p class="form-control">
        <strong>Address:</strong>
        <%= @user.address %>
      </p>
    </div>
  <% end %>
  <% if @user.dob.present? %>
    <div class="col">
      <p class="form-control">
        <strong>Dob:</strong>
        <%= @user.dob %>
      </p>
    </div>
  <% end %>
   <div class="d-flex justify-content-end">
    <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-sm btn-outline-secondary mr-3" %>
   </div>
  </div>

<% elsif current_user.user_type == "Admin" %>

<div class="show-center">
  <div class="col">
    <div class="pro-img-div">
    <% if @user.profile_img.attached? %>
        <%= image_tag @user.profile_img, class: "profile-round" %>
    <% end%>
    </div>
  </div>

  <div class="col">
    <p class="form-control">
      <strong>Name:</strong>
      <%= @user.name %>
    </p>
  </div>

  <div class="col">
    <p class="form-control">
    <strong>User Type:</strong>
    <%= @user.user_type %>
    </p>
  </div>

  <div class="col">
    <p class="form-control">
    <strong>Email:</strong>
    <%= @user.email %>
    </p>
  </div>

  <div class="col">
    <p class="form-control">
    <strong>Phone:</strong>
    <%= @user.phone %>
    </p>
  </div>

  <div class="col">
    <p class="form-control">
    <strong>Address:</strong>
    <%= @user.address %>
    </p>
  </div>

  <div class="col">
    <p class="form-control">
    <strong>Dob:</strong>
    <%= @user.dob %>
    </p>
  </div>
  <div class="d-flex justify-content-end">
    <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-sm btn-outline-secondary mr-3" %>
  </div>

  <% end %>
</div>
