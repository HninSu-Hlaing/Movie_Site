<p id="notice"><%= notice %></p>

<% if current_user %>

  <div class="profile-center">
  <div class="pro-img-div">
    <% if @user.profile_img.attached? %>
      <%= image_tag @user.profile_img, class: "profile-round" %>
    <% end%>
  </div>

  <div class="col">
    <p class="form-control">
      <strong>Name:</strong>
        <%= @user.name %>
    </p>
  </div>
  <div class="col">
    <p class="form-control">
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
  </div>
  <div class="col">
    <p class="form-control">
      <strong>Phone:</strong>
      <%= @user.phone %>
    </p>
  </div>
  <div class="col">
    <p class="form-control">
      <strong>Address:</strong>
      <%= @user.address %>
    </p>
  </div>

  <div class="col">
    <p class="form-control">
      <strong>Dob:</strong>
      <%= @user.dob %>
    </p>
  </div>
   <div class="d-flex justify-content-end">
    <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-sm btn-outline-secondary mr-3" %>
   </div>
  </div>

<% else %>
<div class="col-md-3">
  <p class="form-control">
    <strong>Name:</strong>
    <%= @user.name %>
  </p>
</div>

<div class="col-md-3">
  <p class="form-control">
  <strong>User Type:</strong>
  <%= @user.user_type %>
  </p>
</div>

<div class="col-md-3">
  <p class="form-control">
  <strong>Email:</strong>
  <%= @user.email %>
  </p>
</div>

<div class="col-md-3">
  <p class="form-control">
  <strong>Phone:</strong>
  <%= @user.phone %>
  </p>
</div>

<div class="col-md-3">
  <p class="form-control">
  <strong>Address:</strong>
  <%= @user.address %>
  </p>
</div>

<div class="col-md-3">
  <p class="form-control">
  <strong>Dob:</strong>
  <%= @user.dob %>
  </p>
</div>

<div class="col-md-3">
  <p class="form-control">
  <strong>Profile img:</strong>
  <% if @user.profile_img.attached? %>
      <%= image_tag @user.profile_img, class: "profile-round" %>
  <% end%>
  </p>
</div>
<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-sm btn-outline-secondary" %> |
<%= link_to 'Back', users_path, class: "btn btn-sm btn-dark text-white" %>
<% end %>
