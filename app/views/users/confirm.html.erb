<%= form_with(model: @user, local: true) do |form| %>
<div class="profile-center">
<h1>Confirmation</h1>
  <div class="col">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="col my-2">
    <%= form.label :user_type %>
    <br>
     <%= form.select :user_type, [['Please select a user', nil], 'Admin', 'User'], {}, {class: 'form-control'}  %>
  </div>

  <div class="col">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="col my-2">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="col">
    <%= form.label :phone %>
    <%= form.number_field :phone, class: "form-control" %>
  </div>

  <div class="col my-2">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="col">
    <%= form.label :dob %>
    <%= form.date_field :dob, class: "form-control" %>
  </div>

  <div class="col mt-2 mb-3">
    <%= form.label :profile_img %>
    <%= form.file_field :profile_img, class: "form-control" %>
  </div>

    <%= link_to 'Back', signup_path, class: "btn btn-dark text-white" %>
    <%= form.submit "Confirm", class: "btn btn-primary" %>
</div>
  <% end %>