<div class = "login-center">
<h1>Reset Password?</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col my-2">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
  </div>
  <div class="col my-2">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Enter password" %>
  </div>

    <div class="actions">
    <%= form.submit 'Reset Password', class: "btn btn-primary mt-3" %>
  </div>

<% end %>
</div>
