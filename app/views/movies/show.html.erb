<div class="media">
  <% @movie.poster_img.each do |poster_img| %>
    <%= image_tag(poster_img, class:"align-self-start mr-3", width: "300px", height: "300px" ) %><br/>
  <% end %>
  <!---<%= link_to 'Destroy', @movie, method: :delete, data: { confirm: 'Are you sure?' } %>-->
  <div class="media-body">
    <h5 class="mt-0"> <%= @movie.title %> </h5>
    
    <p>Desc: <%= @movie.movie_detail.desc%></p>
    <p>Release Date : <%= @movie.movie_detail.release_date.strftime('%m/%d/%Y') %></p>
    <p>Cast : <%= @movie.movie_detail.cast%></p>
    <p>Director : <%= @movie.movie_detail.director%> </p>
    <div>
      <% @movie.movie_detail.imdb.to_i.times do  %>
        <span class="fas fa-star star-icon2" style="color:yellow"></span>
      <% end %>
    </div><br/>
    <p class="fs-1"><i class="fa-solid fa-tomato" style="color:red"></i><%= @movie.movie_detail.rotten_tomatoe %></p>
    <p>Trailer Link : <%= @movie.movie_detail.trailer_link %> </p>
    <p>
      <strong style="font-size:18px;">Comments:</strong>
      <%= render @movie.comments.order(id: :desc) %>
      <%= render partial: 'comments/cform', locals: {movie: @movie } %>
    </p>
    <%= link_to 'Back', movies_path %>
  </div>
</div>


<div class="panel panel-primary">
  <div class="panel-body">
    <div class="row">
       <div class="col-md-4">
       <% @movie.poster_img.each do |poster_img| %>
          <%= image_tag(poster_img,  style: "height:350px;", class: "img-thumbnail") %>
        <% end %>
       </div>
       <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <td><h5>Title:</h5></td>
              <td><h5><%= @movie.title %></h5></td>
            </tr>
            <tr>
              <td><strong>Description:</strong></td>
              <td><%= @movie.movie_detail.desc%></td>
            </tr>
            <tr>
              <td><strong>Director:</strong></td>
              <td><%= @movie.movie_detail.director%></td>
            </tr>
            <tr>
              <td><strong>Cast:</strong></td>
              <td><%= @movie.movie_detail.cast%></td>
            </tr>
            <tr>
              <td>
                <div>
                    <% @movie.movie_detail.imdb.to_i.times do  %>
                    <span class="fas fa-star star-icon2" style="color:yellow"></span>
                    <% end %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
              <p class="fs-1"><i class="fa-solid fa-tomato" style="color:red"></i>
              <%= @movie.movie_detail.rotten_tomatoe %></p>
              </td>
            </tr>
            <tr>
              <td><strong>Trailer:</strong></td>
              <td><%= @movie.movie_detail.trailer_link %></td>
            </tr>
          </tbody>
        </table>
        <p>
          <strong style="font-size:18px;">Comments:</strong>
          <%= render @movie.comments.order(id: :desc) %>
          <%= render partial: 'comments/cform', locals: {movie: @movie } %>
        </p>
        <%= link_to 'Back', movies_path %>
